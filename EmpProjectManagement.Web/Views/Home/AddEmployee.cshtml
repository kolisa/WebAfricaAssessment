@model EmpProjectManagement.Models.AddEmployeeDto
@{
    ViewData["Title"] = "Add Employee";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                @*<h1 class="m-0 text-dark"></h1>*@
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item "><a href="#"> Employee</a></li>
                    <li class="breadcrumb-item active">Add</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<section class="content">
    <div class="container-fluid">
        <div class="card">
            <!-- SELECT2 EXAMPLE -->
            <div class="card-header">
                <h3 class="card-title">Add Employee</h3>

            </div>
            <form id="formID" enctype="multipart/form-data" method="post" asp-action="SaveEmployee" asp-controller="home">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Name</label>
                                <input type="text" class="form-control" placeholder="Name" asp-for="Name" />
                            </div>
                            <div class="form-group">
                                <label>Surname</label>
                                <input type="text" class="form-control" placeholder="Surname" asp-for="Surname" />
                            </div>
                            <div class="form-group">
                                <label> Job Title</label>
                               
                                <select asp-for="JobTitleId" class="form-control">
                                    <option value="1">Developer</option>
                                    <option value="2">DBA</option>
                                    <option value="3">Tester</option>
                                    <option value="4">Business Analyst</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label> Date Of Birth</label>
                                @*<input type="text" class="form-control" placeholder="Date" asp-for="DateOfBirth" id="tbDateOfBirth" />*@
                                <div class="input-group date" id="reservationdate" data-target-input="nearest">
                                    <input type="text" class="form-control datetimepicker-input" data-target="#reservationdate" asp-for="DateOfBirth">
                                    <div class="input-group-append" data-target="#reservationdate" data-toggle="datetimepicker">
                                        <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                    </div>
                                </div>
                            </div>
                           
                            <div class="modal-footer justify-content-md-end">

                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</section>

<script type="text/javascript">
    $(function () {
        // Silly example to demonstrate.
        //$('#formID').validate().form();

        //if ($('#formID').valid() === false) {
        //    console.log("invalid");
        //} else {
